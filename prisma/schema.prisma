generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./foodzap.db"
}


model User{
  id Int @id @default(autoincrement())
  email String @unique
  password String
  empresas Empresa[]
}

model Empresa{
  id Int @id @default(autoincrement())
  name String
  endereco String
  cnpj Int @unique
  telefone String
  userId Int
  user User @relation(fields: [userId], references: [id])
}

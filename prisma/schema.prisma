generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./foodzap.db"
}


model User{
  id Int @id @default(autoincrement())
  email String @unique
  password String
}

enum TipoPessoa {
  CLIENTE
  EMPRESA
  ENTREGADOR
}

model Pessoa{
  id Int @id @default(autoincrement())
  cpfCnpj String @unique
  nome String
  password String
  email String? @unique
  cep String?
  numero String?
  estado String?
  cidade String?
  bairro String?
  endereco String?
  complemento String?
  telefone String?
  habilitacao String?
  tipoPessoa TipoPessoa?
}

model Produto{
  id Int @id @default(autoincrement())
  nome String
  preco String
  categoria String
  descricao String?
  disponivel Boolean
  imageUrl String?

}


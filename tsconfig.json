{
  "compilerOptions": {
    "target": "ES2020",                 // versão do JS gerado
    "module": "CommonJS",               // ou "ESNext", depende do seu projeto
    "rootDir": "src",                   // onde estão seus arquivos .ts
    "outDir": "dist",                   // para onde vai o código compilado
    "strict": true,                     // boas práticas de TS
    "esModuleInterop": true,            // compatibilidade
    "resolveJsonModule": true,          // se for importar .json
    "skipLibCheck": true
  },
  "include": ["src"],                   // compilar apenas a pasta src
  "exclude": ["node_modules", "dist"]   // ignora essas pastas
}
